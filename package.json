{
  "name": "fastify-autoload",
  "version": "0.7.1",
  "description": "Require all plugins in a directory",
  "main": "index.js",
  "typings": "fastify-autoload.d.ts",
  "scripts": {
    "lint:js": "standard | snazzy ",
    "lint:ts": "eslint --ext .ts .",
    "lint": "npm run lit:js && npm run lint:ts",
    "test:js": "npm run lint:js && tap test/*.js",
    "test:ts": "npm run lint:ts && tsc --project ./tsconfig.json && tap test/*.ts",
    "test": "npm run test:js && npm run test:ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fastify/fastify-autoload.git"
  },
  "keywords": [
    "fastify",
    "require",
    "folder",
    "directory",
    "plugin",
    "plugins",
    "automatically",
    "load",
    "auto"
  ],
  "author": "Matteo Collina <hello@matteocollina.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fastify/fastify-autoload/issues"
  },
  "homepage": "https://github.com/fastify/fastify-autoload#readme",
  "devDependencies": {
    "@types/node": "^11.13.4",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "eslint-config-standard-with-typescript": "^7.1.0",
    "fastify": "^2.2.0",
    "fastify-plugin": "^1.5.0",
    "fastify-url-data": "^2.3.0",
    "pre-commit": "^1.2.2",
    "snazzy": "^8.0.0",
    "standard": "^12.0.1",
    "tap": "^12.6.5",
    "typescript": "^3.4.3"
  },
  "dependencies": {
    "steed": "^1.1.3"
  },
  "standard": {
    "ignore": [
      "test/error/lib/a.js"
    ]
  },
  "greenkeeper": {
    "ignore": [
      "tap"
    ]
  }
}
